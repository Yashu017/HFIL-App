<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <TextView
        android:id="@+id/signUp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Verify Your Number"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/signUp_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUp_title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Please enter your Country Code \nand Phone number for verification"
        android:textAlignment="center"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/country_code_text"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUp_desc"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_input_bg"
        android:ems="10"
        android:hint="+91"
        android:inputType="number"
        android:padding="16dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/phone_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUp_desc"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/country_code_text"
        android:background="@drawable/text_input_bg"
        android:ems="10"
        android:hint="Your Phone Number"
        android:inputType="phone"
        android:padding="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/generate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number_text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/primary_btn_bg"
        android:padding="5dp"
        android:text="Generate OTP"
        android:textColor="@android:color/background_light"
        android:textSize="17sp" />

</RelativeLayout>

</RelativeLayout>